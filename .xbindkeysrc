# xbacklight and kbdlight (AUR) needed.

# Assign screen brightness keys.
"light -A 10"
    XF86MonBrightnessUp
"light -U 10"
    XF86MonBrightnessDown

# F3 will show rofi task manager.
"rofi -show window"
    XF86LaunchA
"rofi -show drun"
    XF86LaunchB

# Assign keyboard brightness keys.
"kbdlight up 10"
    XF86KbdBrightnessUp
"kbdlight down 10"
    XF86KbdBrightnessDown

# Assign audio keys.
"mpc prev"
    XF86AudioPrev
"mpc next"
    XF86AudioNext
"mpc toggle"
    XF86AudioPlay
"amixer -q -D pulse set Master 5%+ unmute"
    XF86AudioRaiseVolume
"amixer -q -D pulse set Master 5%- unmute"
    XF86AudioLowerVolume
"amixer -q -D pulse set Master toggle"
    XF86AudioMute

# Assign power key.
"qdbus org.kde.ksmserver /KSMServer org.kde.KSMServerInterface.logout -1 -1 -1"
    XF86PowerOff

# Assign screenshot key.
"scrotutl -f"
    Control+Shift + 3
"scrotutl -s"
    Control+Shift + 4
"scrotutl -w"
    Control+Shift + Space + 4
