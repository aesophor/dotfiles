# shortcuts
alias ls="gls --color=auto -hX --group-directories-first"
alias l='ls'
alias la='ls -lAh'
alias ll='la'
alias c='clear'
alias cll='c; ll'
alias rcd='cd $(pwd)'
alias x86brew='arch -x86_64 /usr/local/bin/brew'

# safer rm.
alias rm='rm -i'
#alias rm -rf='rm -irf'

# corrections
alias bitch='sudo'
alias bitchedit='sudoedit'
alias gdb='gdb -q'

# typos
alias cl='c; l'
alias CL='c; l'
alias CLL='c; ll'
alias EXIT='exit'
alias eixt='exit'
alias xit='exit'
alias :q='exit'
alias :q!='exit'

# bookmarks
alias home='cd ~/; ll'
