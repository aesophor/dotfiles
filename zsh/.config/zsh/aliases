# shortcuts
alias r='cd `pwd`'
alias l='ls'
alias ls='ls --color -hX --group-directories-first'
alias la='ls -lAh'
alias ll='la'
alias c='clear'
alias cll='c; ll'
alias open='xdg-open'
alias vim='nvim'

# safer rm.
alias rm='rm -i'
alias rm -rf='rm -irf'

# corrections
alias bitch='sudo'
alias bitchedit='sudoedit'
alias reboot='sync && sync && sudo reboot'
alias shutdown='sync && sync && sudo shutdown now'
alias gdb='gdb -q'

# typos
alias cl='c; l'
alias CL='c; l'
alias CLL='c; ll'
alias EXIT='exit'
alias eixt='exit'
alias xit='exit'
alias :q='exit'
alias :q!='exit'

# configuration shortcuts
alias config-dp='vim ~/.xorg/displayctlrc'
alias config-wm='vim ~/.config/wmderland/config'
alias config-i3='vim ~/.config/i3/config'
alias config-polybar='vim ~/.config/polybar/config'

# bookmarks
alias home='cd ~/; ll'
alias code='cd ~/Code; ll'
alias dl='cd ~/Downloads; ll'
alias docs='cd ~/Documents; ll'
alias notes='cd ~/Documents/Notes; ll'
alias works='cd ~/Workspaces; ll'
alias pics='cd ~/Pictures; ll'
alias vids='cd ~/Videos; ll'
alias musics='cd ~/Music; ll'
alias games='cd ~/Games; ll'
alias dots="cd ~/Dots; ll"
alias vpn='cd ~/.config/143vpn/TCP; ll'

# shortcuts to my personal projects
alias ctf='cd ~/CTF; ll'
alias hack='cd ~/Code/hacklympics/Hacklympics; ll'
alias vgl='cd ~/Code/vigilante; ll'
alias wm='cd ~/Code/wmderland; ll'
alias os='cd ~/Code/valkyrie; ll'
alias dojo='cd ~/Code/dojo; ll'
alias web='cd /var/www/localhost/htdocs; ll'
alias syno='cd ~/Code/Synology; ll'
alias sb='cd ~/Code/samba/; ll'
alias rkt='cd ~/Code/satan; ll'
