#!/usr/bin/env zsh
# dzen2 switch wm script

if pgrep -f "dzen2 -title-name Calendar" > /dev/null; then
    pkill -f "dzen2 -title-name Calendar"
    exit
fi


wm=" i3 Wmderland" # The first char SHOULD be a whitespace!!!
select_wm=`echo -e "Select WM"${wm// /"\n"setwm }`
lines=`echo $select_wm | wc -l`

echo $lines

