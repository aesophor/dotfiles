#!/usr/bin/env bash
source ~/.local/bin/colors

DISTRO=`cat /etc/lsb-release | grep DISTRIB_ID | head -n 1 | cut -d = -f 2 | sed 's/\"//g'`
KERNEL_NAME=`uname -s`
KERNEL_RELEASE=`uname -r`
PKGNUM=`ls -d /var/db/pkg/*/* | wc -l`
UPTIME=`uptime -p | sed 's/up //'`

if [ -n "$DISPLAY" ]; then
  WMNAME=`xprop -root _NET_WM_NAME | cut -d \" -f 2`
else
  WMNAME="console"
fi

cat << EOF

${c03}    .-----.      ${c07}$USER @ $HOSTNAME
${c03}  .\`    _  \`.    ${c12}distro    ${c05}$DISTRO $KERNEL_NAME
${c03}  \`.   (${c1}_)   ${c0}\`.  ${c12}uptime    ${c05}$UPTIME
${c03}    \`${c1}.        /  ${c12}kernel    ${c05}$KERNEL_RELEASE
${c01}   .\`       .\`   ${c12}packages  ${c05}$PKGNUM
${c01}  /       .\`     ${c12}shell     ${c05}$SHELL
${c01}  \____.-\`       ${c12}wm        ${c05}$WMNAME${c07}

EOF
